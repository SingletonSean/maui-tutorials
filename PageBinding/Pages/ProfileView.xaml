<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PageBinding.Pages.ProfileView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:PageBinding.Pages"
    x:DataType="vm:IProfileViewBindingContext">
    <VerticalStackLayout
        Padding="20"
        HorizontalOptions="Center"
        MaximumWidthRequest="600">
        <Label
            FontSize="Large"
            HorizontalOptions="Center"
            Text="{Binding Name}"
            VerticalOptions="Center" />

        <Label
            Margin="0,10,0,0"
            HorizontalOptions="Center"
            Text="{Binding Address}"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>