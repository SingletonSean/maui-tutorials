<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ContentViewComponents.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ContentViewComponents">
    <ScrollView Margin="20" MaximumWidthRequest="600">
        <VerticalStackLayout>
            <VerticalStackLayout Margin="0,0,0,20">
                <local:SushiCard
                    Title="Spicy Tuna Roll"
                    AddToCartCommand="{Binding AddToCartCommand}"
                    Description="One of the greatest sushi rolls." />
            </VerticalStackLayout>
            <VerticalStackLayout Margin="0,0,0,20">
                <local:SushiCard
                    Title="Yellowtail Scallion Roll"
                    AddToCartCommand="{Binding AddToCartCommand}"
                    Description="A nice roll to switch it up sometimes." />
            </VerticalStackLayout>
            <VerticalStackLayout Margin="0,0,0,20">
                <local:SushiCard
                    Title="California Roll"
                    AddToCartCommand="{Binding AddToCartCommand}"
                    Description="A classic sushi roll." />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
