<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ConditionalRender.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ConditionalRender"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <ContentPage.Resources>
        <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
    </ContentPage.Resources>
    <VerticalStackLayout
        Padding="50"
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <HorizontalStackLayout VerticalOptions="Center">
            <CheckBox x:Name="isEnabledCheckbox" />
            <Label Text="Is Enabled?" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <VerticalStackLayout Margin="0,10,0,0">
            <Label
                FontSize="Large"
                IsVisible="{Binding IsChecked, Source={x:Reference isEnabledCheckbox}}"
                Text="Enabled" />
            <Label
                FontSize="Large"
                IsVisible="{Binding IsChecked, Source={x:Reference isEnabledCheckbox}, Converter={StaticResource InvertedBoolConverter}}"
                Text="Disabled" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>