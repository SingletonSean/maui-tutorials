<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MockedMode.Pages.RandomCatFactView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <VerticalStackLayout Margin="20" MaximumWidthRequest="600">
        <Label
            FontSize="Medium"
            HorizontalTextAlignment="Center"
            Text="{Binding CatFact}" />
        <Button
            Margin="0,20,0,0"
            Command="{Binding LoadRandomCatFactCommand}"
            FontAttributes="Bold"
            Text="Generate" />
    </VerticalStackLayout>
</ContentPage>