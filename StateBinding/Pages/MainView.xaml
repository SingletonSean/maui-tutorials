<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StateBinding.Pages.MainView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <VerticalStackLayout Padding="50" MaximumWidthRequest="800">
        <VerticalStackLayout>
            <Label Text="First Name" />
            <Entry Margin="0,2,0,0" Text="{Binding State.FirstName}" />
        </VerticalStackLayout>

        <VerticalStackLayout Margin="0,10,0,0">
            <Label Text="Last Name" />
            <Entry Margin="0,2,0,0" Text="{Binding State.LastName}" />
        </VerticalStackLayout>

        <VerticalStackLayout Margin="0,10,0,0">
            <Label Text="Occupation" />
            <Entry Margin="0,2,0,0" Text="{Binding State.Occupation}" />
        </VerticalStackLayout>

        <VerticalStackLayout Margin="0,10,0,0">
            <Label Text="Favorite Color" />
            <Entry Margin="0,2,0,0" Text="{Binding State.FavoriteColor}" />
        </VerticalStackLayout>

        <VerticalStackLayout Margin="0,10,0,0">
            <Label Text="Favorite Food" />
            <Entry Margin="0,2,0,0" Text="{Binding State.FavoriteFood}" />
        </VerticalStackLayout>

        <Button
            Margin="0,20,0,0"
            Command="{Binding SubmitCommand}"
            Text="Submit" />

        <Label Margin="0,20,0,0" Text="{Binding State.Output}" />
    </VerticalStackLayout>
</ContentPage>